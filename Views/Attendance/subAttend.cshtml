@model List<itgsgroup.Models.hrms.empAttendViewModel>

@{
	ViewData["Title"] = "View Subordinate Attendance";
	ViewData["active"] = "VSA";
	var empRawAtts = ViewBag.empRawAtt as List<Tuple<DateTime, string>>;
}

<!-- Page Header -->
<div class="page-header">
	<div class="row">
		<div class="col-sm-12">
			<h3 class="page-title">Subordinate Attendance</h3>
			<ul class="breadcrumb">
				<li class="breadcrumb-item"><a asp-controller="Home" asp-action="EmpIndex">Dashboard</a></li>
				<li class="breadcrumb-item active">Subordinate Attendance</li>
			</ul>
		</div>
	</div>
</div>
<!-- /Page Header -->


<div class="row">
	<div class="col-lg-12">
		<div class="table-responsive">
			<table id="example1" class="table table-striped custom-table mb-0">
				<thead>
					<tr>
						<th>#</th>
						<th>Employee</th>
						<th>Date </th>
						<th>Day</th>
						<th>Time Correction</th>
						<th>Punch In</th>
						<th>Punch Out</th>
						<th>Production</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.emp.name</td>
							<td>@item.date.ToString("dd MMM yyyy")</td>
							<td>@item.Day</td>
							<td>@item.time_correction</td>
							<td>@item.Checkin</td>
							<td>@item.Checkout</td>
							<td>@item.actualhour</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- /Page Content -->